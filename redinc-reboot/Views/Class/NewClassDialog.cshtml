@model core.Modules.Class.ClassData

@using (Html.BeginForm("NewClass", "Class", FormMethod.Post, new { id = "newClassForm" })) {
    <fieldset>
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name)

        @Html.LabelFor(m => m.RequiredDomain, "Required Domain (optional) (cannot be changed)")
        @Html.TextBoxFor(m => m.RequiredDomain)
    </fieldset>
}
