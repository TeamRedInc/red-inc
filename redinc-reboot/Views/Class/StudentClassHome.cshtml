@model core.Modules.Class.ClassData
@{
    ViewBag.Title = "Student Class Home";
}

<h2>@Model.Name Student Home</h2>

<div class="btn-toolbar">
    @Html.ActionLink("New Problem", "Edit", "Problem", new { @class = "btn" })
    @Html.ActionLink("My Progress", "Student", "Progress", new { id = WebSecurity.CurrentUserId }, new { @class = "btn" })
</div>

<br /><br />

<h3>Unlocked Sets</h3>

<div class="container">
    <div class="well">
    @foreach (core.Modules.ProblemSet.ProblemSetData set in ViewBag.UnlockedSets)
    {
        
        @Html.ActionLink(set.Name, "Solve", "Problem", new { id = set.Id }, new { @class = "btn btn-block btn-large btn-text-left" })
        
    }
    </div>
</div>


<h3>Locked Sets</h3>
<div class="container">
    <div class="well">
    
    @foreach (core.Modules.ProblemSet.ProblemSetData set in ViewBag.LockedSets)
    {
        <div class="btn btn-block disabled btn-large btn-text-left">
        @Html.DisplayTextFor(m => set.Name)
        </div>
    }
    </div>
</div>

<h3>Solved Sets</h3>
<div class="container">
    <div class="well">
    @foreach (core.Modules.ProblemSet.ProblemSetData set in ViewBag.SolvedSets)
    {
        <div class="btn btn-block btn-large btn-text-left">
            @Html.DisplayTextFor(m => set.Name)
        </div>
    }
    </div>
</div>

<br /><br /><br />
